/**index.wxss**/
.font_coler{
  color: red;
}

.banner-img{
	width:100%;
}

.banner-img img{
	width:100%;
	height:auto;
}

.common-title{
  width: 90%;
  font-size: 0.9375rem;
  margin: 0.625rem auto;
}
.van-list{
  width: 100%;
}
.van_img{
  width: 25%;
  float: left;
  box-sizing: border-box;
  min-height: 0.0625rem;
}
.aplayer-body{
    flex-shrink: 0;
    position: relative;
    height: 66px;
    width: 66px;
    background-size: cover;
    -webkit-transition: all .3s ease;
    transition: all .3s ease;
    cursor: pointer;
}
.van-row--align-center{
    -webkit-box-align: center;
    -webkit-align-items: center;
    align-items: center;
}
.van-row--flex {
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
}
.van-col--17 {
    width: 70.83333333%;
}
.van-col {
    float: left;
    box-sizing: border-box;
    min-height: 0.0625rem;
}
.homework-item .homework-name {
    font-size: 0.8125rem;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}
.homework-item .time {
    text-align: right;
    font-size: 0.625rem;
    color: #999;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}
.homework-item {
    width: 90%;
    padding-right: 0.3125rem;
    margin: 0 auto 0.625rem;
    background-color: #EEEEEE;
    box-sizing: border-box;
}
.homework-item .homework-desc {
    font-size: 0.75rem;
    color: #666;
    width: 75%;
}
.homework-btn {
    background-color: #FCAE03 !important;
    border-radius: 5px !important;
    border-color: #FCAE03 !important;
    color:#fff !important;
}
.van-col--24 {
    width: 100%;
}

.works-record {
    width: 95%;
    margin: 30rpx auto 20rpx;
    padding-left: 30rpx;
    box-sizing: border-box;
}
.works-record .works-record-title {
    padding-left: 20rpx;
    border-left: 2px solid #f2574b;
    font-size: 0.8125rem;
}
.no-content{
    text-align: center;
    color:#999;
}
