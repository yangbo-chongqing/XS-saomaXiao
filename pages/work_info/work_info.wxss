    line-height: 2.6rem;
    background-color: #fff;
    align-items: center;

}
.van-field__label {
    -webkit-box-flex: 0;
    -webkit-flex: none;
    flex: none;
    width: 5.625rem;
}

.van-cell__value {
    position: relative;
    overflow: hidden;
    color: #969799;
    text-align: left;
